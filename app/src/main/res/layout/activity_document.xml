<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Aproveitamento de Estudos"
            android:id="@+id/aproveitamento_estudos_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Atividades Complementares"
            android:id="@+id/atividades_complementares_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Certidão de Registro"
            android:id="@+id/certidao_registro_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Avaliação de Desempenho"
            android:id="@+id/avaliacao_desempenho_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Certidão de Matrícula"
            android:id="@+id/certidao_matricula_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Certidão de Provável Concluinte"
            android:id="@+id/certidao_provavel_concluinte_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Extrato de Matrícula"
            android:id="@+id/extrato_matricula_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Requerimento de Imposição de Grau"
            android:id="@+id/requerimento_imposição_grau_text_view"
            android:autoLink="all"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_picture_as_pdf_black_24dp"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:text="Histórico Escolar"
            android:id="@+id/historico_escolar_text_view"
            android:autoLink="all"/>

    </LinearLayout>
</ScrollView>
